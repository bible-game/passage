{
  "family": "passage",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::970547366462:role/service-role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::970547366462:role/passageTaskRole",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "volumes": [
    {
      "name": "configVol",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-04668767e78751bef",
        "transitEncryption": "ENABLED",
        "authorizationConfig": {
          "accessPointId": "fsap-09ae32d876833d57e",
          "iam": "ENABLED"
        },
        "rootDirectory": "/"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "passage",
      "image": "bible/passage",
      "portMappings": [
        { "containerPort": 8081, "hostPort": 8081, "protocol": "tcp" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/passage",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "configVol",
          "containerPath": "/app/config",
          "readOnly": true
        }
      ],
      "environment": [
        { "name": "PROFILE", "value": "prod" },
        { "name": "CONFIGURATION", "value": "/app/config/PROD/" }
      ],
      "secrets": [
        { "name": "OPENAI_KEY", "valueFrom": "arn:aws:secretsmanager:us-east-1:970547366462:secret:OPENAI_KEY-xfdHpl" },
        { "name": "REDIS_URL", "valueFrom": "arn:aws:secretsmanager:us-east-1:970547366462:secret:REDIS_URL-jyzOGJ:REDIS_URL::" },
        { "name": "POSTGRES_URL", "valueFrom": "arn:aws:secretsmanager:us-east-1:970547366462:secret:POSTGRES_URL-6TDNvx" },
        { "name": "POSTGRES_USER", "valueFrom": "arn:aws:secretsmanager:us-east-1:970547366462:secret:POSTGRES_USER-TklunI" },
        { "name": "POSTGRES_PASSWORD", "valueFrom": "arn:aws:secretsmanager:us-east-1:970547366462:secret:POSTGRES_PASSWORD-GYAAoP" },
        { "name": "GH_PACKAGES_USER", "valueFrom": "arn:aws:secretsmanager:us-east-1:970547366462:secret:GH_PACKAGES_USER-YsRAYA" },
        { "name": "GH_PACKAGES_TOKEN", "valueFrom": "arn:aws:secretsmanager:us-east-1:970547366462:secret:GH_PACKAGES_TOKEN-Npki1K" }
      ]
    }
  ]
}
